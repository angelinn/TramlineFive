<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TramlineFive.Pages.LocationPromptPage"
             Shell.FlyoutBehavior="Disabled">

    <Grid BackgroundColor="DodgerBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackLayout VerticalOptions="End" HorizontalOptions="Center" BackgroundColor="Transparent">
            <Label FontFamily="MaterialIconsOutlinedRegular.otf" Text="fmd_good" TextColor="White"  FontSize="170" HorizontalOptions="Center" VerticalOptions="Center"/>
            <Label TextColor="White" FontSize="21" HorizontalTextAlignment="Center" Margin="15,10,15,10" Text="Използвайки местоложение ще могат да бъдат намерени спирки близо до Вас." />
            <Label TextColor="White" FontSize="15" HorizontalTextAlignment="Center" Text="Местоположението ви са лични данни, които не се съхраняват или споделят." />
        </StackLayout>

        <Button Grid.Row="1" VerticalOptions="Start" Clicked="LocationPromptClicked" Text="ОК" BackgroundColor="White" TextColor="DodgerBlue" Margin="30,20,30,0" CornerRadius="11" />
    </Grid>
</ContentPage>
