<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TramlineFive.Maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TramlineFive.Maui"
    xmlns:pages="clr-namespace:TramlineFive.Pages"
    FlyoutBehavior="Flyout"
    Shell.NavBarIsVisible="False">

    <FlyoutItem Route="Main" Title="Home" FlyoutDisplayOptions="AsSingleItem">
        <ShellContent Route="Map" ContentTemplate="{DataTemplate pages:MapPage}" />
        <ShellContent Route="Favourites" ContentTemplate="{DataTemplate pages:FavouritesPage}" />
        <ShellContent Route="History" ContentTemplate="{DataTemplate pages:HistoryPage}" />
    </FlyoutItem>

    <ShellContent Route="Settings" Title="Settings" ContentTemplate="{DataTemplate pages:AboutPage}" />
</Shell>
