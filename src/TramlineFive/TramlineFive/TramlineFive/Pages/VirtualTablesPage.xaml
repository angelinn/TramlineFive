<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TramlineFive.Pages.VirtualTablesPage"
             Title="Виртуални табла">
    
    <Grid Padding="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        
        <StackLayout HorizontalOptions="Center">
            <Entry Placeholder="Код на спирка..." Text="{Binding StopCode}" />
            <Button Margin="0,10,0,0" Text="Проверяване" Clicked="OnCheckClicked" />
            <ActivityIndicator IsEnabled="{Binding IsLoading}" IsRunning="{Binding IsLoading}" IsVisible="{Binding IsLoading}" />
            <Label Text="{Binding Message}" IsVisible="{Binding NoTimings}" />
        </StackLayout>
        
        <ListView Grid.Row="1" ItemsSource="{Binding Timings}">

        </ListView>
        <Label Text="{Binding Version.VersionNumber, StringFormat='Налична е версия v{0}. Кликнете за сваляне.'}" Grid.Row="2"
               TextColor="DodgerBlue" HorizontalOptions="Center">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnVersionTapped" />
            </Label.GestureRecognizers>
        </Label>
    </Grid>
</ContentPage>
    