<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TramlineFive.Pages.MapPage"
             xmlns:v="clr-namespace:TramlineFive.Views"
             Title="Карта">
    <Grid x:Name="grid">
        <ActivityIndicator HorizontalOptions="Center" VerticalOptions="Center" HeightRequest="64" WidthRequest="64" IsEnabled="True" IsRunning="True" IsVisible="True" />
        <v:MapsUIView x:Name="mapControl"  IsVisible="False" />
        <StackLayout x:Name="slLocation" IsVisible="False" HeightRequest="32" Padding="5" Margin="5" WidthRequest="32" Opacity="0.8" BackgroundColor="White" HorizontalOptions="End" VerticalOptions="Start">
            <StackLayout.GestureRecognizers>
                <TapGestureRecognizer Tapped="MapPage_Clicked" />
            </StackLayout.GestureRecognizers>

            <Image Source="Resources/drawable/mylocation.png">
                <Image.Source>
                    <OnPlatform x:TypeArguments="ImageSource">
                        <OnPlatform.Android>
                            <FileImageSource File="Resources/drawable/mylocation.png" />
                        </OnPlatform.Android>
                        <OnPlatform.WinPhone>
                            <FileImageSource File="assets/mylocation.png" />
                        </OnPlatform.WinPhone>
                    </OnPlatform>
                </Image.Source>
            </Image>
        </StackLayout>


    </Grid>
</ContentPage>
    