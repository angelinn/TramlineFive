<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TramlineFive.Pages.HistoryPage"
             Title="История"
             BindingContext="{Binding HistoryViewModel, Source={StaticResource Locator}}">

    <Grid>
        <ListView ItemsSource="{Binding History}" RowHeight="70">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <ViewCell.View>
                            <StackLayout Spacing="0" Padding="10">
                                <Label Text="{Binding Name}" />
                                <Label Text="{Binding StopCode}" />
                                <Label Text="{Binding TimeStamp}" />
                            </StackLayout>
                        </ViewCell.View>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</ContentPage>